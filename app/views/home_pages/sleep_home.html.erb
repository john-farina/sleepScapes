<% content_for :title do %>sleepDefaultTitleWierdName_-_-<% end %>
<div class="homeContainer categoryContainer" id="homePage">
  <a class="pageATag categoryATag" href="/home">
    <h1 class="homeTitle sleepTitle">
      [sleepScapes]
    </h1>
  </a>

  <% if @random_post %>
    <a href=<%= sleepscape_page_url(user_id: @random_post.user_id, sleepscape_id: @random_post.id) %>>
      <div class="recommendContainer">
        <%= image_tag(@random_post.sleepscape_still_picture, class: "recommendPic") %>

        <div class="recomendInfoContainer">
        <div class="bottomBox">
          <p class="bottomHeader">Recommended:</p>

          <div class="info">
            <p class="infoTitle"><%= @random_post.title %></p>
            <p><%= @random_post.recorded_at %></p>
          </div>
        </div>
      </div>
      </div>
    </a>
  <% end %>

<div class="headerContainer homeHeaderContainer categoryHeader">
  <p class="defaultPageHeader homeHeader">curated <span class="purple first">[</span>sleepScapes<span class="purple">]</span></p>
</div>

<% if @curated_sleepscapes %>
  <% @curated_sleepscapes.each do |sleep| %>
    <%= render 'layouts/soundscape_tile', sleep_values: sleep %>
  <% end %>
<% end %>

<div class="headerContainer homeHeaderContainer categoryHeader">
  <p class="defaultPageHeader homeHeader">all <span class="purple first">[</span>sleepScapes<span class="purple">]</span></p>
</div>

<% if @all_sleepscapes %>
  <% @all_sleepscapes.each do |sleep| %>
    <%= render 'layouts/soundscape_tile', sleep_values: sleep %>
  <% end %>
<% end %>
</div>
