<% content_for :title do %>studyDefaultTitleWierdName_-_-<% end %>

<div class="homeContainer categoryContainer" id="homePage">
  <a class="pageATag" href="/home">
    <h1 class="homeTitle studyTitle">[studyScapes]</h1>
  </a>

  <% if @random_post %>
    <a href=<%= sleepscape_page_url(user_id: @random_post.user_id, sleepscape_id: @random_post.id) %>>
    <div class="recommendContainer">
      <%= image_tag(@random_post.sleepscape_still_picture, class: "recommendPic") %>

    <div class="recomendInfoContainer">

      <div class="bottomBox">
        <p class="bottomHeader">Recommended:</p>
        <div class="info">
          <p class="infoTitle"><%= @random_post.title %></p>
          <p><%= @random_post.recorded_at %></p>
        </div>
      </div>
    </div>
  </div>
</a>
<% end %>

<div class="headerContainer homeHeaderContainer categoryHeader">
  <p class="defaultPageHeader homeHeader">curated <span class="green first">[</span>studyScapes<span class="green">]</span></p>
</div>

<% if @curated_studyscapes %>
  <% @curated_studyscapes.each do |sleep| %>
    <%= render 'layouts/soundscape_tile', sleep_values: sleep %>
  <% end %>
<% end %>

<br>
<br>

<div class="headerContainer homeHeaderContainer categoryHeader">
  <p class="defaultPageHeader homeHeader">all <span class="green first">[</span>studyScapes<span class="green">]</span></p>
</div>

<% if @all_studyscapes %>
  <% @all_studyscapes.each do |sleep| %>
    <%= render 'layouts/soundscape_tile', sleep_values: sleep %>
  <% end %>
<% end %>
</div>
