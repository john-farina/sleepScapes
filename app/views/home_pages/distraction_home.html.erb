<% content_for :title do %>distractDefaultTitleWierdName_-_-<% end %>
<div class="homeContainer categoryContainer" id="homePage">
  <a class="pageATag" href="/home">
    <h1 class="homeTitle distractionTitle">[distractionScapes]</h1>
  </a>

  <% if @random_post %>
    <a href=<%= sleepscape_page_url(user_id: @random_post.user_id, sleepscape_id: @random_post.id) %>>
    <div class="recommendContainer">
      <%= image_tag(@random_post.sleepscape_still_picture, class: "recommendPic") %>
      <div class="recomendInfoContainer">
      <div class="bottomBox">
        <p class="bottomHeader">Recommended:</p>
        <div class="info">
          <p class="infoTitle"><%= @random_post.title %></p>
          <p><%= @random_post.recorded_at %></p>
        </div>
      </div>
    </div>
  </div>
</a>
<% end %>

<div class="headerContainer homeHeaderContainer categoryHeader">
  <p class="defaultPageHeader homeHeader">curated <span class="red first">[</span>distractionScapes<span class="red">]</span></p>
</div>

<% if @curated_distractscapes %>
  <% @curated_distractscapes.each do |sleep| %>
    <%= render 'layouts/soundscape_tile', sleep_values: sleep %>
  <% end %>
<% end %>

<div class="headerContainer homeHeaderContainer categoryHeader">
  <p class="defaultPageHeader homeHeader">recent <span class="red first">[</span>distractionScapes<span class="red">]</span></p>
</div>

<% if @all_distractscapes %>
  <% @all_distractscapes.each do |sleep| %>
    <%= render 'layouts/soundscape_tile', sleep_values: sleep %>
  <% end %>
<% end %>

</div>
