<header id="pageHeader">
  <div class="accountContainer">
    <div class="accountPicture">
      <% if current_user.profile_picture.attached? %>
        <%= image_tag(current_user.profile_picture, class: "headerPic")%>
      <% else %>
        <%= image_tag("defaultUser", class: "headerPic")%>
      <% end %>
    </div>
    <p>
      welcome, <%= current_user.name %>
    </p>
  </div>
  <a href="/home">
    <div class="headerBtn">
      <p>Home</p>
    </div>
  </a>
  <a href=<%= user_page_url(id: current_user.id) %>>
    <div class="headerBtn">
      <p>Account</p>
    </div>
  </a>
  <a href=<%= create_url(id: current_user.id) %>>
    <div class="headerBtn">
      <p>Create</p>
    </div>
  </a>
  <a  href=<%= sign_out_url %>>
    <div class="headerBtn">
      <p>Sign Out</p>
    </div>
  </a>
</header>
