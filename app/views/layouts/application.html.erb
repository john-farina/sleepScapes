<!DOCTYPE html>
<html>
  <head>
    <title>SleepScapes</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <%= javascript_pack_tag 'application' %>

  </head>

  <body>
  <div class="webContainer">
      <% if signed_in? %>
          <%= react_component("Header", {signedIn: true, currentUser: current_user}) %>
      <% else %>
          <%= react_component("Header", {signedIn: false}) %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
