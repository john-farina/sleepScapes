<!DOCTYPE html>
<html>
  <head>
    <title>SleepScapes</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <body>
    <% if signed_in? %>
      <%= render 'layouts/signed_in_header' %>
    <% else %>
      <%= render 'layouts/signed_out_header' %>
    <% end %>
    <main id="mainPage">
      <div id="menuButton" class="menuButton">
        <%= image_tag("menu.svg", class: "menuIcon") %>
        <%= image_tag("arrow.svg", class: "arrowIcon", id: "arrowIcon") %>
      </div>
      <div class="sleepContainer">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
